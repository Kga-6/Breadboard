rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own user document.
    // This rule ensures that a user can only access their own data.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Rules for the friend request system
    match /friendRequests/{requestId} {
        allow read, create: if request.auth != null;
        allow update, delete: if request.auth != null && (request.auth.uid == resource.data.from || request.auth.uid == resource.data.to);
    }
  }
}